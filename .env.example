# 环境变量配置文件示例
# 复制此文件为 .env 并修改配置

# 应用配置
APP_NAME=YARA-X Manager
DEBUG=true
HOST=0.0.0.0
PORT=8000

# 数据库配置
# SQLite (开发环境)
DATABASE_URL=sqlite:///./yara_manager.db

# PostgreSQL (生产环境)
# DATABASE_URL=postgresql://username:password@localhost:5432/yara_db

# Redis 配置
REDIS_URL=redis://localhost:6379/0

# JWT 认证
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# YARA 配置
YARA_RULES_DIR=./rules
YARA_COMPILED_DIR=./compiled
MAX_RULE_SIZE=10485760

# 扫描配置
SCAN_TIMEOUT=300
MAX_FILE_SIZE=104857600
SCAN_THREADS=4

# 上传配置
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=524288000

# CORS 配置
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
